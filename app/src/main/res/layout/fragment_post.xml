<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostFragment"
    style="@style/MyAppTheme">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:fillViewport="true">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edt_plot_title"
      android:hint="title"
    style="@style/editText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_plot_locate"
        android:hint="location"
        style="@style/editText"
        android:layout_below="@id/edt_plot_title"/>

  <EditText
      android:id="@+id/edt_plot_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/edt_plot_locate"
      android:hint="description"
      style="@style/editText" />

  <EditText
      android:id="@+id/edt_plot_price"
      style="@style/editText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/edt_plot_desc"
      android:hint="price"
      android:padding="8dp"
      android:textSize="22sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_plot_phone"
        android:hint="phone number"
       style="@style/editText"
        android:layout_below="@id/edt_plot_price"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/sel_img_btn"
      android:text="select Image ....."
      android:background="@drawable/bg_edit"
      android:padding="10dp"
      android:layout_below="@id/edt_plot_phone"
      android:layout_marginStart="10dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/sel_img_btn"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:id="@+id/demo_img"
            android:src="@color/cardview_dark_background"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_data_btn"
            android:text="post Property"
            android:backgroundTint="#FF9800"
            android:background="@drawable/bg_edit"
            android:layout_below="@id/demo_img"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
      </RelativeLayout>
  </ScrollView>


</RelativeLayout>